<Window x:Class="MacroRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Macro Recorder" Height="600" Width="900" MinWidth="700" MinHeight="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Spacing="8">
            <Button x:Name="RecordButton" Content="Record" Width="90" Click="OnRecordClicked" />
            <Button x:Name="StopButton" Content="Stop" Width="90" Click="OnStopClicked" />
            <Button x:Name="PlayButton" Content="Play" Width="90" Click="OnPlayClicked" />
            <Button x:Name="SaveButton" Content="Save" Width="90" Click="OnSaveClicked" />
            <Button x:Name="LoadButton" Content="Load" Width="90" Click="OnLoadClicked" />

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0" Spacing="4">
                <TextBlock Text="Speed:" VerticalAlignment="Center" />
                <ComboBox x:Name="SpeedComboBox" Width="80" IsEditable="True" SelectedIndex="1">
                    <ComboBoxItem Content="0.5" />
                    <ComboBoxItem Content="1" />
                    <ComboBoxItem Content="1.5" />
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0" Spacing="4">
                <TextBlock Text="Repeat:" VerticalAlignment="Center" />
                <TextBox x:Name="RepeatTextBox" Width="60" Text="1" />
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" Margin="0,10,0,10" CornerRadius="4" x:Name="StatusIndicator" Background="LightGray" Padding="12">
            <DockPanel>
                <TextBlock x:Name="StatusLabel" Text="Status: Idle" FontWeight="Bold" />
                <TextBlock Text="  (Hotkeys: Ctrl+Shift+R=Record, Ctrl+Shift+P=Play, Ctrl+Shift+S=Stop)" Foreground="Gray" DockPanel.Dock="Right" />
            </DockPanel>
        </Border>

        <DataGrid Grid.Row="2" x:Name="EventsGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Margin="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150" />
                <DataGridTextColumn Header="Timestamp (ms)" Binding="{Binding TimestampMsSinceStart}" Width="150" />
                <DataGridTextColumn Header="Details" Binding="{Binding Description}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
